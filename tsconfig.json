{
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["DOM", "ES2022"],
    "moduleResolution": "node",
    "target": "ES2022",
    "paths": {
      "application/*": ["src/application/*"],
      "domain/*": ["src/domain/*"],
      "infrastructure/*": ["src/infrastructure/*"],
      "presentation/*": ["src/presentation/*"],
      "shared/*": ["src/shared/*"]
    }
  }
}
