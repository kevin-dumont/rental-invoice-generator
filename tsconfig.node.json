{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "paths": {
      "application/*": ["src/application/*"],
      "domain/*": ["src/domain/*"],
      "infrastructure/*": ["src/infrastructure/*"],
      "presentation/*": ["src/presentation/*"],
      "shared/*": ["src/shared/*"]
    }
  },
  "include": ["vite.config.ts"]
}
